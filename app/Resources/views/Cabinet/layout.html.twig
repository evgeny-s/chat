<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Chain Responsive Bootstrap3 Admin</title>

    <link href="{{ asset('assets/cabinet/css/style.default.css') }}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="{{ asset('assets/cabinet/js/html5shiv.js') }}"></script>
    <script src="{{ asset('assets/cabinet/js/respond.min.js') }}"></script>
    <![endif]-->
</head>

<body current_route="{{ app.request.attributes.get('_route') }}">

<header>
    <div class="headerwrapper">
        <div class="header-left">
            <a href="{{ path('_cabinet_index') }}" class="logo">
                <img src="{{ asset('assets/cabinet/images/logo.png') }}" alt="" />
            </a>
            <div class="pull-right">
                <a href="#" class="menu-collapse">
                    <i class="fa fa-bars"></i>
                </a>
            </div>
        </div><!-- header-left -->

        <div class="header-right">

            <div class="pull-right">
                <div class="btn-group btn-group-option">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li><a href="{{ path('_cabinet_profile') }}"><i class="glyphicon glyphicon-user"></i>My profile</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ path('fos_user_security_logout') }}"><i class="glyphicon glyphicon-log-out"></i>Sign Out</a></li>
                    </ul>
                </div><!-- btn-group -->

            </div><!-- pull-right -->

        </div><!-- header-right -->

    </div><!-- headerwrapper -->
</header>

<section>
    <div class="mainwrapper">
        {{ include('::Cabinet/left_menu.html.twig') }}

        <div class="mainpanel">
            <div class="pageheader">
                <div class="media">
                    <div class="pageicon pull-left">
                        <i class="fa fa-home"></i>
                    </div>
                    <div class="media-body">
                        <!-- <ul class="breadcrumb">
                            <li><a href="#"><i class="glyphicon glyphicon-home"></i></a></li>
                            <li><a href="#">Pages</a></li>
                            <li>Blank Page</li>
                        </ul> -->
                        <h4>User communication cabinet</h4>
                    </div>
                </div><!-- media -->
            </div><!-- pageheader -->

            <div class="contentpanel">
                {% for type, messages in app.session.flashBag.all %}
                    <div class="alert alert-info">
                        {% for message in messages %}
                            <div class="{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}

                {% block content %}{% endblock %}

            </div><!-- contentpanel -->

        </div>
    </div><!-- mainwrapper -->
</section>


<script src="{{ asset('assets/cabinet/js/jquery-1.11.1.min.js') }}"></script>
